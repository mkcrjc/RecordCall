<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_layout"
            >
        <ImageView
                android:id="@+id/record_list_item_ivAvatar"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ava_default_person"
                android:layout_marginRight="5dp"
                />
        <TextView
                android:id="@+id/record_list_item_tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/record_list_item_ivAvatar"
                android:text="Khiem"
                android:textColor="@color/name"
                android:textStyle="bold"
                android:layout_marginRight="5dp"
                />
        <TextView
                android:id="@+id/record_list_item_tvOutIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/record_list_item_ivAvatar"
                android:layout_below="@+id/record_list_item_tvName"
                android:text="OutComming"
                android:layout_marginRight="5dp"
                />
        <TextView
                android:id="@+id/record_list_item_tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/record_list_item_ivAvatar"
                android:layout_below="@+id/record_list_item_tvOutIn"
                android:text="Feb 18, 2014 12:50:29 AM"
                android:layout_marginRight="5dp"
                />
        <ImageView
                android:id="@+id/record_list_item_ivPlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/button_play"
                android:layout_centerVertical="true"
                />
    </RelativeLayout>

</LinearLayout>